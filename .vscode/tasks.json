{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "${workspaceFolder}\\.venv\\Scripts\\activate.bat",
                    "&"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "[mkdocs] serve",
            "type": "shell",
            "isBackground": true,
            "command": "mkdocs",
            "args": [
                "serve",
                "-f",
                "${workspaceRoot}\\docs\\mkdocs.yml",
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*(Error|Except).*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Building documentation.*",
                    "endsPattern": ".*Start detecting changes.*"
                }
            }
        },
        {
            "label": "[mkdocs] gh-deploy",
            "type": "shell",
            "isBackground": true,
            "command": "mkdocs",
            "args": [
                "gh-deploy",
                "-f",
                "${workspaceRoot}\\docs\\mkdocs.yml",
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*(Error|Except).*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Building documentation.*",
                    "endsPattern": ".*Start detecting changes.*"
                }
            }
        }
    ]
}